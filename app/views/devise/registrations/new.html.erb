<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <h2>Sign Up</h2>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: :true }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
        <%= f.input :first_name, required: true, label: false, placeholder: 'First name' %>
        <%= f.input :last_name, required: true, label: false, placeholder: 'Last name'  %>
        <%= f.input :email, required: true, autofocus: true, label: false, placeholder: 'Email address' %>
        <%= f.input :password, required: true, label: false, placeholder: 'Create a password' %>
        <%= f.input :pic_url, required: true, label: false, placeholder: 'Add a link to your picture' %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Sign Up", class:  "btn-formo" %>
      </div>
      <% end %>
    <%= render "devise/shared/links" %>
    </div>
  </div>
</div>


