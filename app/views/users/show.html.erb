<%= content_for(:title) do %>
  Fitsapp | <%= @user.first_name + ' ' + @user.last_name %>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-6-offset">
      <%= image_tag "#{@user.pic_url}", {class: "avatar-square-lg"} %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-6 col-xs-6-offset">
      <h2><%= @user.first_name %><%= " " %><%= @user.last_name %></h2>
    </div>
  </div>
</div>
